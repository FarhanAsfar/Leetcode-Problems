{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and Run",
        "type": "shell",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/output"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run",
        "type": "shell",
        "command": "${fileDirname}/output",
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
  }
  